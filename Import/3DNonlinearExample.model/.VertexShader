#version 330

// Bei der Verwendung der Shader können nur die vorhandenen In-/Outputs und Uniforms verwendet werden
// werden weitere Größen benötigt können sie nicht aus dem Programm übergeben werden sondern müssen als const
// im Shader deklariert werden

// Die uniforms die übergeben werden sind
//
// uniform vec3 viewPos;
// uniform vec3 lightPos;
// uniform vec4 materialColor;
// uniform float time;
// 
// Die Zeit wird dabei in Sekunden übergeben

// input vertex attribute die die pipeline an den vertex shader übergibt
in vec3 vertexPosition;
in vec2 vertexTexCoord;
in vec3 vertexNormal;
in vec4 vertexColor;

// input uniforms, werden von pipeline übergeben
uniform mat4 mvp;
uniform mat4 matModel;
uniform mat4 matNormal;
uniform float time;

// Vertex eigenschaften die an den fragment shader übergeben werden
out vec3 fragPosition;
out vec2 fragTexCoord;
out vec4 fragColor;
out vec3 fragNormal;

//
void main()
{
    // Umrechnung von Vertex auf Fragment (Pixel)
    fragPosition = vec3(matModel*vec4(vertexPosition, 1.0));
    
    fragTexCoord = vertexTexCoord;
    fragColor = vertexColor;
    fragNormal = normalize(vec3(matNormal * vec4(vertexNormal, 1.0)));

    // Renderposition für den Vertex
    gl_Position = mvp*vec4(vertexPosition, 1.0);
}